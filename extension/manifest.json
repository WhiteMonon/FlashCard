{
  "manifest_version": 3,
  "name": "My FlashTabs",
  "version": "1.0",
  "description": "Learn vocabulary with every new tab using spaced repetition and AI TTS.",
  "permissions": [
    "storage",
    "tabs"
  ],
  "chrome_url_overrides": {
    "newtab": "index.html"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "host_permissions": [
    "http://localhost:8000/*"
  ]
}
